<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.board.mapper.BoardMapper">

	<select id="getList" resultType="kr.board.entity.MyBoard">
		SELECT * 
		  FROM MYBOARD
		ORDER BY idx DESC
	</select>
	
	<insert id="insertBoard" parameterType="kr.board.entity.MyBoard">
		INSERT INTO MYBOARD(title, content, writer)
		VALUES (#{title}, #{content}, #{writer})
	</insert>
	
	<select id="boardContent" parameterType="int" resultType="kr.board.entity.MyBoard">
		SELECT *
		  FROM MyBoard
		 WHERE IDX=#{idx}
	</select>
	
	<update id="updateBoard" parameterType="MyBoard">
		UPDATE MyBoard
		   SET TITLE=#{title}
		 	   , CONTENT=#{content}
		 WHERE IDX=#{idx}
	</update>
	
	<delete id="deleteBoard" parameterType="int">
		DELETE FROM MYBOARD
		 WHERE idx=#{idx}
	</delete>
</mapper>
